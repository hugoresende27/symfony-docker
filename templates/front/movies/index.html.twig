{% extends 'base.html.twig' %}

{% block title %}Hello MoviesController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">


    <ul class="movie-grid" style="list-style: none;">
        {% for movie in movies %}
            <li class="movie-item">
                <h1>{{ movie.title }}</h1>
                <img src="https://image.tmdb.org/t/p/original/{{ movie.poster_path }}" alt="poster" width="300px">
            </li>
        {% endfor %}
    </ul>
</div>


<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }
    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
    .movie-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr)); /* Adjusts grid items based on screen size */
        grid-gap: 20px;
    }
    .movie-item {
        text-align: center;
    }
    .movie-item img {
        width: 100%;
        height: auto;
    }
</style>


{% endblock %}
